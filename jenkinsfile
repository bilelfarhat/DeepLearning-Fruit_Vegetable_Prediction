pipeline {
    agent any

    environment {
        PROJECT_ID = 'deeplearning-422418'
        CLUSTER_NAME = 'cluster-1'
        ZONE = 'us-central1'
        DOCKER_IMAGE_NAME = 'bilelfarhat/deep2'
    }

    stages {
        stage('Checkout repository') {
            steps {
                git branch: 'main', url: 'https://github.com/bilelfarhat/DeepLearning-Fruit_Vegetable_Prediction.git'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                }
            }
        }
        
        stage('Build Docker image') {
            steps {
                sh "docker build -t bilelfarhat/deep2 ."
            }
        }

        stage('Tag Docker image') {
            steps {
                sh "docker tag bilelfarhat/deep2 bilelfarhat/deep2:latest"
            }
        }

        stage('Push Docker image to Docker Hub') {
            steps {
                sh "docker push bilelfarhat/deep2"
            }
        }

        stage('Update Kubernetes deployment') {
    steps {
        sh '''
            gcloud container clusters get-credentials cluster-1 --zone us-central1 --project deeplearning-422418
            kubectl apply -f kubernetes/
            kubectl set image deployment/deep deep=bilelfarhat/deep2:latest
        '''
    }
}

        }
    }

    post {
        success {
            // Remove Docker image from Jenkins workspace
            sh "docker rmi bilelfarhat/deep2:latest"
        }
    }
}
