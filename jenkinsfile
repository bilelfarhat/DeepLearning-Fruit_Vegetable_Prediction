pipeline {
    agent any

    environment {
        PROJECT_ID = 'deeplearning-422418'
        CLUSTER_NAME = 'cluster-1'
        ZONE = 'us-central1'
        DOCKER_IMAGE_NAME = 'bilelfarhat/deep2'
    }

    stages {
        stage('Checkout repository') {
            steps {
                git branch: 'main', url: 'https://github.com/bilelfarhat/DeepLearning-Fruit_Vegetable_Prediction.git'
            }
        }
        

        stage('Build Docker image') {
            steps {
                sh "sudo docker build -t $DOCKER_IMAGE_NAME ."
            }
        }

        stage('Tag Docker image') {
            steps {
                sh "sudo docker tag $DOCKER_IMAGE_NAME $DOCKER_IMAGE_NAME:latest"
            }
        }

        stage('Push Docker image to Docker Hub') {
            steps {
                sh "sudo docker push $DOCKER_IMAGE_NAME:latest"
            }
        }

        stage('Update Kubernetes deployment') {
            steps {
                sh '''
                    gcloud container clusters get-credentials $CLUSTER_NAME --zone $ZONE --project $PROJECT_ID
                    kubectl apply -f kubernetes/
                    kubectl set image deployment/deep deep=$DOCKER_IMAGE_NAME:latest
                '''
            }
        }
    }

    post {
        success {
            // Supprime l'image Docker de l'instance VM
            sh "sudo docker rmi $DOCKER_IMAGE_NAME:latest"
        }
    }
}
